<Window x:Class="StudentInfoSystem.GradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="Студентска информационна система" Height="104.318" Width="383.157">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold" ></Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="mainGrid" Margin="0,0,0.4,248.6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="studentGrid" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,10,0"/>
        <Label Content="Оценка" HorizontalAlignment="Left" Height="34" Margin="37,29,0,-63" VerticalAlignment="Top" Width="82"/>
        <TextBox Name ="gradeField" HorizontalAlignment="Left" Height="34" Margin="147,29,0,-63" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Добави
                " HorizontalAlignment="Left" Height="32" Margin="292,29,0,-61" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
